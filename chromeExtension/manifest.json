{
    "manifest_version": 3,
    "name": "Gistify",
    "version": "1.0",
    "description": "Summarize YouTube videos using AI.",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    },
    "host_permissions": [
        "https://www.youtube.com/*"
    ]
}